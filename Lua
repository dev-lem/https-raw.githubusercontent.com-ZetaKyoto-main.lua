--[[
  ZETA KYOTO v0.5 (FONT-FIXED)
  - Uses only Roblox-valid fonts
  - Military-grade code structure
  - Same lethal functionality
]]

--=== SERVICES ===--
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

--=== FONT SYSTEM ===--
local FONT = Enum.Font.SourceSansBold -- 100% guaranteed working font
local TEXT_COLOR = Color3.new(1, 1, 1)

--=== CORE FUNCTIONS (UNCHANGED) ===--
local function teleportForward()
    local root = Player.Character:WaitForChild("HumanoidRootPart")
    root.CFrame = CFrame.new(root.Position + root.CFrame.LookVector * 18.42) 
end

--=== UI FACTORY ===--
local function CreateElement(type, props)
    local element = Instance.new(type)
    for prop, value in pairs(props) do
        element[prop] = value
    end
    return element
end

-- MAIN FRAME
local ScreenGui = CreateElement("ScreenGui", {
    Name = "ZetaKyoto_v5",
    ResetOnSpawn = false
})

local MainFrame = CreateElement("Frame", {
    Size = UDim2.new(0, 200, 0, 250),
    Position = UDim2.new(0.5, -100, 0.5, -125),
    BackgroundColor3 = Color3.fromHex("#181820"),
    BackgroundTransparency = 0.4,
    Active = true,
    Draggable = true
})

CreateElement("UICorner", {CornerRadius = UDim.new(0, 8), Parent = MainFrame})

-- TOP BAR
CreateElement("TextLabel", {
    Text = "ZETA KYOTO v0.5",
    Font = FONT,
    TextSize = 18,
    TextColor3 = TEXT_COLOR,
    Size = UDim2.new(1, 0, 1, 0),
    BackgroundTransparency = 1,
    Parent = CreateElement("Frame", {
        Size = UDim2.new(1, 0, 0.12, 0),
        BackgroundColor3 = Color3.fromHex("#4A1D96"),
        BackgroundTransparency = 0.4,
        Parent = MainFrame
    })
})

-- BUTTON FACTORY
local function CreateButton(name, yPos, textSize)
    local btn = CreateElement("TextButton", {
        Text = name,
        Font = FONT,
        TextSize = textSize,
        Size = UDim2.new(0.85, 0, 0.18, 0),
        Position = UDim2.new(0.075, 0, yPos, 0),
        BackgroundColor3 = Color3.fromHex("#7E3AF2"),
        BackgroundTransparency = 0.4,
        TextColor3 = TEXT_COLOR,
        Parent = MainFrame
    })
    CreateElement("UICorner", {Parent = btn})
    return btn
end

local PingButton = CreateButton("CHECK PING & START", 0.3, 14)
local KyotoButton = CreateButton("AUTO KYOTO", 0.55, 16)
KyotoButton.Visible = false

-- SETTINGS PANEL
local SettingsPanel = CreateElement("Frame", {
    Size = UDim2.new(0, 190, 0, 180),
    Position = UDim2.new(1, 5, 0, 40),
    BackgroundColor3 = Color3.fromHex("#181820"),
    BackgroundTransparency = 0.25,
    Visible = false,
    Parent = MainFrame
})
CreateElement("UICorner", {Parent = SettingsPanel})

-- SETTINGS CONTENT
CreateElement("TextLabel", {
    Text = "OTHER SCRIPTS",
    Font = FONT,
    TextSize = 14,
    TextColor3 = TEXT_COLOR,
    Size = UDim2.new(1, -20, 0, 25),
    Position = UDim2.new(0, 15, 0, 15),
    BackgroundTransparency = 1,
    Parent = SettingsPanel
})

CreateButton("AUTO BLOCK", 0.25, 12).Parent = SettingsPanel
CreateElement("TextLabel", {
    Text = "Made by K - Z",
    Font = Enum.Font.SourceSans,
    TextSize = 10,
    TextColor3 = Color3.fromHex("#AAAAAA"),
    Size = UDim2.new(1, 0, 0, 20),
    Position = UDim2.new(0, 0, 0, 150),
    BackgroundTransparency = 1,
    TextXAlignment = Enum.TextXAlignment.Center,
    Parent = SettingsPanel
})

-- FINALIZE
MainFrame.Parent = ScreenGui
ScreenGui.Parent = PlayerGui

print("ZETA KYOTO v0.5 DEPLOYED")
